.banner
  display flex
  flex-direction column
  justify-content center
  height 100vh
  min-height 560px
  padding-top 2rem
  padding-bottom 2rem
  position relative
  text-align center
  &__caption
    display inline-block
    border-top 2px solid #fff
    border-bottom 2px solid #fff
    padding 1rem
    font-size 1.75rem
    margin-bottom 2rem
  &__description
    text-transform uppercase
    color white
    letter-spacing 0.225rem
    margin-bottom 2rem

.linkToMore
  position absolute
  left 50%
  bottom 0
  width 11rem
  margin-left (@width / -2)
  padding 2rem
  text-decoration none
  text-transform uppercase
  font-size 0.8rem
  letter-spacing 0.125rem
  color #fff
  display inline-block
  i
    padding-top 1rem