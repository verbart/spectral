.mainFooter
  background rgba(29, 36, 42, 0.9)
  padding 5rem 1rem
  position relative
  text-align center
  color rgba(white, 0.5)

.socialLinks
  &__item
    text-decoration none
    font-size 1.2rem
    color rgba(white, 0.5)
    padding .5rem
    margin 0 0.5rem
    transition 0.3s
    &:hover
      color white

.copyrights
  display block
  font-size .85rem
  letter-spacing 0.125rem
  margin 0
  padding 0
  padding-top 1.8rem
  &__item
    display inline-block
    text-transform uppercase
    padding 0 0.75rem
    margin-top .5rem
    line-height 1rem
    &:not(:last-child)
      @media (min-width 768px)
        border-right 1px solid rgba(white, 0.4)
    @media (max-width 768px)
      display block
