@import '../background/background.styl'

.about
  background #2e3842
  color #fff
  &Item
    gradualDarkening(3)
    display flex
    align-items center
    @media (max-width 980px)
      display block
    &:nth-child(2n)
      flex-direction row-reverse
    &__image
      width 40%
      img
        width 100%
        display block
      @media (max-width 980px)
        width 100%
    &__info
      max-width 640px
      margin auto
      width 60%
      padding 1rem 4rem
      @media (max-width 980px)
        width 100%
        padding 2rem 15px
        text-align center
    &__caption
      font-size 1.1rem
    &__description
      margin 0
